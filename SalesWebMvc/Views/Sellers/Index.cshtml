@model IEnumerable<SalesWebMvc.Models.Seller>

@{
    ViewData["Title"] = "Vendedor";
}

<h6>@ViewData["Title"]</h6>

<p>
    <a class="btn btn-primary" asp-action="Create">Novo Vendedor</a>

</p>
<table class=" table table-striped table-hover" >

    <thead >
        <tr class="table-primary">
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BaseSalary)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.BirthDate)
            </th>
            <td>

            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BaseSalary)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.BirthDate)
            </td>

            <td>
                <a class="btn btn-warning" asp-action="Editar" asp-route-id="@item.Id">Editar</a>
                <a class="btn btn-info" asp-action="Detalhes" asp-route-id="@item.Id">Detalhes</a>
                <a class="btn btn-danger" asp-action="Delete" asp-route-id="@item.Id">Apagar</a>
            </td>
        </tr>
        }
    </tbody>

</table>
